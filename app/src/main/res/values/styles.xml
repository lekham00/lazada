<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/bg_appbar_layout</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/bg_main</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="textAllCaps" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <declare-styleable name="EditTextPassword">
        <attr name="useStrike" format="boolean" />
        <attr name="useErrorPass" format="boolean" />
        <attr name="textErrorPassEmpty" format="string" />
        <attr name="textErrorSizeMinInvalid" format="string" />
        <attr name="textErrorSizeMaxInvalid" format="string" />
        <attr name="textErrorTextInvalid" format="string" />
        <attr name="textSizeMin" format="integer" />
        <attr name="textSizeMax" format="integer" />
    </declare-styleable>
    <declare-styleable name="CustomEditText">
        <attr name="useEmail" format="boolean" />
        <attr name="useError" format="boolean" />
        <attr name="textErrorEmpty" format="string" />
        <attr name="textErrorEmailInvalid" format="string" />
    </declare-styleable>
</resources>
